<Window x:Class="MangerTest.Gewicht.KoerperdatenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangerTest.Gewicht"
        xmlns:conv="clr-namespace:MangerTest.Converter"
        xmlns:vm="clr-namespace:MangerTest.ViewModel" 
        mc:Ignorable="d"        
        
        Title="Körperdaten" Height="800" Width="500"
        Style="{StaticResource {x:Type Window}}">

    <Window.Resources>
        <conv:MaskedTextToDecimalConverter x:Key="DecimalConverter" />
        <conv:DrawingBrushToMediaBrushConverter x:Key="DrawingBrushToMediaBrushConverter" />
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <!-- 22 Zeilen -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>

            </Grid.ColumnDefinitions>

            <!-- Feld 1 -->
            <TextBlock Text="Gewicht" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Gewicht}" 
                     Grid.Row="0" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="BMI" Grid.Row="1" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding BMI}" 
                     Grid.Row="1" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Körperfett" Grid.Row="2" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Koerperfett}" 
                     Grid.Row="2" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Fettmasse" Grid.Row="3" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Fettmasse}" 
                     Grid.Row="3" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Fettfreies Körpergewicht" Grid.Row="4" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding FettfreiesKoerpergewicht}" 
                     Grid.Row="4" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Muskelmasse" Grid.Row="5" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Muskelmasse}" 
                     Grid.Row="5" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Muskelfrequenz" Grid.Row="6" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Muskelfrequenz}" 
                     Grid.Row="6" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Skelettmuskulatur %" Grid.Row="7" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Skelettmuskulatur}"
                     Grid.Row="7" Grid.Column="1"
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Knochenmasse" Grid.Row="8" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Knochenmasse}" 
                     Grid.Row="8" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Eiweißmenge" Grid.Row="9" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Eiweissmenge}" 
                     Grid.Row="9" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Proteine" Grid.Row="10" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Proteine}" 
                     Grid.Row="10" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Wassergehalt" Grid.Row="11" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Wassergehalt}" 
                     Grid.Row="11" Grid.Column="1"
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Körperwasser %" Grid.Row="12" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Koerperwasser}" 
                     Grid.Row="12" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Unterhautfettgewebe" Grid.Row="13" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding Unterhautfettgewebe}" 
                     Grid.Row="13" Grid.Column="1"
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="Viszerales Fett" Grid.Row="14" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding ViszeralesFett, Converter={StaticResource DecimalConverter}, UpdateSourceTrigger=PropertyChanged}" 
                     Grid.Row="14" Grid.Column="1" 
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>

            <TextBlock Text="BMR" Grid.Row="15" HorizontalAlignment="Center" Height="20" Width="100"/>
            <TextBox Text="{Binding BMR}" 
                     Grid.Row="15" Grid.Column="1"
                     KeyDown="Control_KeyDown"
                     Margin="5,5,5,5"/>


            <Button x:Name="btnSpeichern" 
                    Grid.Row="0" Grid.Column="4" Content="Speichern" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" Width="80" 
                    Command="{Binding SpeichernCommand, PresentationTraceSources.TraceLevel=High}"
                    Cursor="Arrow" Height="35" Margin="20,0,0,0"/>

            <StackPanel Grid.Column="2" Grid.Row="11" Grid.RowSpan="5"
            Margin="10,5,10,0" Width="80" Height="150" VerticalAlignment="Top">
                <!-- Rote Ampel -->
                <Ellipse Width="30" Height="30" Fill="{Binding AmpelRot}"  Margin="10"/>
                <!-- Gelbe Ampel -->
                <Ellipse Width="30" Height="30" Fill="{Binding AmpelGelb}" Margin="10" RenderTransformOrigin="0.567,-0.167"/>
                <!-- Grüne Ampel -->
                <Ellipse Width="30" Height="30" Fill="{Binding AmpelGruen}" Margin="10"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Window>
