<Window x:Class="MangerTest.Training.TrainingEin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangerTest.Training"
        mc:Ignorable="d"
        Title="TrainingEin" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Eingabeformular -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <!-- Neue Spalte für den Button -->
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Erste Zeile -->
            <TextBlock Text="Datum:" Grid.Row="0" Grid.Column="0" Margin="5,5,5,5"/>
            <DatePicker SelectedDate="{Binding NeuerEintrag.Datum}" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5"/>

            <TextBlock Text="KW:" Grid.Row="0" Grid.Column="2" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.KW}" Grid.Row="0" Grid.Column="3" Margin="46,5,36,27"/>

            <!-- Zweite Zeile -->
            <TextBlock Text="Wochentag:" Grid.Row="1" Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Wochentag}" Grid.Row="1" Grid.Column="1" Margin="25,5,25,5" Width="100" Height="20"/>

            <TextBlock Text="Start:" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Start}" Grid.Row="1" Grid.Column="3" Margin="46,5,46,5"/>

            <!-- Dritte Zeile -->
            <TextBlock Text="Dauer:" Grid.Row="2" Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Dauer}" Grid.Row="2" Grid.Column="1" Margin="25,5,25,5"/>

            <TextBlock Text="RPM:" Grid.Row="2" Grid.Column="2" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.RPM}" Grid.Row="2" Grid.Column="3" Margin="46,5,46,5"/>

            <!-- Vierte Zeile -->
            <TextBlock Text="Entfernung:" Grid.Row="3" Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Entfernung}" Grid.Row="3" Grid.Column="1" Margin="25,5,25,5"/>

            <TextBlock Text="Kcal:" Grid.Row="3" Grid.Column="2" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Kcal}" Grid.Row="3" Grid.Column="3" Margin="46,5,46,5"/>

            <!-- Fünfte Zeile -->
            <TextBlock Text="Puls:" Grid.Row="4" Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Puls}" Grid.Row="4" Grid.Column="1" Margin="25,5,25,5"/>

            <TextBlock Text="Plan Nr:" Grid.Row="4" Grid.Column="2" Margin="5"/>
            <ComboBox x:Name="cmbPlan" Grid.Row="4" Grid.Column="3" Margin="5" Width="140"/>


            <!-- Sechste Zeile -->
            <TextBlock Text="Kommentar:" Grid.Row="5" Grid.Column="0" Margin="5,5,5,5"/>
            <TextBox Text="{Binding NeuerEintrag.Kommentar}" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,7,5,7"/>

            <!-- Button -->
            <Button Content="Eintragen" Command="{Binding EintragenCommand}" 
            Grid.Row="0" Grid.Column="4" 
            Width="100" Margin="244,10,0,10" 
            HorizontalAlignment="Left"/>
        </Grid>

        <!-- DataGrid für Trainingsdaten -->
        <DataGrid ItemsSource="{Binding TrainingsDaten}" Grid.Row="1" AutoGenerateColumns="True" Margin="0,10,0,0"/>
    </Grid>
</Window>
